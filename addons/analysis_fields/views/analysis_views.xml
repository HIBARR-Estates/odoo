<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Analysis Tag Views -->
    <record id="view_analysis_tag_list" model="ir.ui.view">
        <field name="name">analysis.tag.list</field>
        <field name="model">analysis.tag</field>
        <field name="arch" type="xml">
            <list string="Analysis Tags">
                <field name="name"/>
                <field name="description"/>
                <field name="color"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_analysis_tag_form" model="ir.ui.view">
        <field name="name">analysis.tag.form</field>
        <field name="model">analysis.tag</field>
        <field name="arch" type="xml">
            <form string="Analysis Tag">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="color"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- CRM Lead Analysis Fields -->
    <record id="view_crm_lead_form_analysis" model="ir.ui.view">
        <field name="name">crm.lead.form.analysis</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Analysis" name="analysis">
                    <group>
                        <group>
                            <field name="analysis_status"/>
                            <field name="analysis_priority"/>
                            <field name="analysis_date"/>
                            <field name="analysis_risk_level"/>
                        </group>
                        <group>
                            <field name="analysis_score"/>
                            <field name="analysis_completion"/>
                            <field name="analysis_tags" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="analysis_notes"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Partner Analysis Fields -->
    <record id="view_partner_form_analysis" model="ir.ui.view">
        <field name="name">res.partner.form.analysis</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Analysis" name="analysis">
                    <group>
                        <group>
                            <field name="partner_analysis_status"/>
                            <field name="partner_analysis_date"/>
                            <field name="partner_analysis_score"/>
                        </group>
                        <group>
                            <field name="partner_analysis_tags" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="partner_analysis_notes"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo> 