<odoo>
    <record id="view_mail_account_form" model="ir.ui.view">
        <field name="name">mail.account.form</field>
        <field name="model">mail.account</field>
        <field name="arch" type="xml">
            <form string="Mail Account">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="imap_server"/>
                        <field name="imap_port"/>
                        <field name="smtp_server"/>
                        <field name="smtp_port"/>
                        <field name="username"/>
                        <field name="password" password="True"/>
                    </group>
                    <footer>
                        <button name="test_smtp_connection" string="Test SMTP Connection" type="object" class="btn-primary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>