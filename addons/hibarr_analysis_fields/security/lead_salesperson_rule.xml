<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">

        <!-- Rule for Multiple Salesperson -->
        <record id="multiple_salesperson_access_rule" model="ir.rule">
            <field name="name">Leads: Salespersons can access assigned leads (MultipleSalesperson)</field>
            <field name="model_id" ref="model_multiple_salesperson"/>
            <field name="domain_force">[('user_id', 'in', [user.id])]</field>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman')), (4, ref('base.group_system'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Access Control for Multiple Salesperson Model -->
        <record id="access_multiple_salesperson" model="ir.model.access">
            <field name="name">multiple.salesperson access</field>
            <field name="model_id" ref="model_multiple_salesperson"/>
            <field name="group_id" ref="sales_team.group_sale_salesman"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="access_multiple_salesperson_admin" model="ir.model.access">
            <field name="name">multiple.salesperson admin access</field>
            <field name="model_id" ref="model_multiple_salesperson"/>
            <field name="group_id" ref="base.group_system"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Rule for CRM Lead based on Multiple Salesperson -->
        <record id="crm_lead_salesperson_access_rule" model="ir.rule">
            <field name="name">Leads: Access leads assigned via Multiple Salesperson</field>
            <field name="model_id" ref="crm.model_crm_lead"/>
            <field name="domain_force">[('assigned_to_current_user', '=', True)]</field>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman')), (4, ref('base.group_system'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

    </data>
</odoo>
