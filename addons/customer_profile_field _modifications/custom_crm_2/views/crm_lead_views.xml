<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="view_crm_lead_form_custom" model="ir.ui.view">

        <field name="name">crm.lead.form.custom</field>

        <field name="model">crm.lead</field>

        <field name="inherit_id" ref="crm.crm_lead_view_form"/>

        <field name="arch" type="xml">

            <!-- Add address fields before the notebook -->

            <xpath expr="//notebook" position="before">

                <group>

                    <group>

                       <label for="street" string="Address"/>
                                <div class="o_address_format">
                                    <field name="street" placeholder="Street..." class="o_address_street"/>
                                    <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                    <field name="city" placeholder="City" class="o_address_city"/>
                                    <field name="country_id" placeholder="Country" class="o_address_country" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                </div>

                    </group>

                    

                </group>

            </xpath>





            <!-- Add custom tabs -->

            <xpath expr="//notebook/page[1]" position="before">

                <!-- Personal Information Tab -->

                <page string="Personal Information" >

                    <group>

                        <group>

                            <field name="age_range" widget="radio"/>

                            <field name="employment_status" widget="radio"/>

                        </group>

                        <group>

                            <field name="occupation"/>

                            <field name="income"/>

                            <field name="languages" 

                                 widget="many2many_tags" 

                                 options="{'no_create': True, 'horizontal': True}"/>

                            <field name="other_languages" placeholder="Enter other languages not listed"/>

                            <field name="marital_status" widget="radio"/>

                        </group>

                    </group>

                </page>



                <!-- Partner & Children Tab -->

                <page string="Partner &amp; Children" name="partner_children_tab">

                    <group name="partner_info_group" string="Partner Information">

                        <group>

                            <field name="partner_firstname"/>

                            <field name="partner_surname"/>

                            <field name="partner_nationality"/>

                            <field name="partner_country"/>

                            <field name="partner_city"/>

                        </group>

                        <group>

                            <field name="partner_age_range" widget="radio"/>

                            <field name="partner_employment_status" widget="radio"/>

                            <field name="partner_occupation"/>

                            <field name="partner_income"/>

                        </group>

                        <group>

                            <field name="partner_languages" widget="many2many_tags" options="{'no_create': True}"/>

                            <field name="partner_other_languages"/>

                        </group>

                    </group>



                    <group name="children_info_group" string="Children Information">

                        

                        

                        <group string="Child 1">

                            <field name="child1_age"/>

                            <field name="child1_gender" widget="radio"/>

                        </group>

                        

                        <group string="Child 2">

                            <field name="child2_age"/>

                            <field name="child2_gender" widget="radio"/>

                        </group>

                        

                        <group string="Child 3">

                            <field name="child3_age"/>

                            <field name="child3_gender" widget="radio"/>

                        </group>

                        

                        <group string="Child 4">

                            <field name="child4_age"/>

                            <field name="child4_gender" widget="radio"/>

                        </group>

                        

                        <group string="Child 5">

                            <field name="child5_age"/>

                            <field name="child5_gender" widget="radio"/>

                        </group>

                        <field name="living_with_children" string="Are you currently living with your children?"/>

                    </group>

                </page>

            </xpath>

        </field>

    </record>

</odoo>