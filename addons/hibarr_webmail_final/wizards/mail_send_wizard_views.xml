<odoo>
    <record id="view_mail_send_wizard" model="ir.ui.view">
        <field name="name">mail.send.wizard.form</field>
        <field name="model">mail.send.wizard</field>
        <field name="arch" type="xml">
            <form string="Send Email">
                <sheet>
                    <group>
                        <field name="account_id"/>
                        <field name="to"/>
                        <field name="subject"/>
                        <field name="body_html"/>
                    </group>
                    <footer>
                        <button name="send_email" type="object" string="Send" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_send_email" model="ir.actions.act_window">
        <field name="name">Send Email</field>
        <field name="res_model">mail.send.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>