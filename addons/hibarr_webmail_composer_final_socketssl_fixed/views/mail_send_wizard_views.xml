<odoo>
    <record id="action_send_email" model="ir.actions.act_window">
        <field name="name">Send E-Mail</field>
        <field name="res_model">mail.send.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_send_email" name="New Email" action="hibarr_webmail_composer_final_socketssl_fixed.action_send_email" sequence="10"/>

    <record id="view_mail_send_wizard" model="ir.ui.view">
        <field name="name">mail.send.wizard.form</field>
        <field name="model">mail.send.wizard</field>
        <field name="arch" type="xml">
            <form string="Send E-Mail">
                <sheet>
                    <group>
                        <field name="to"/>
                        <field name="subject"/>
                        <field name="body_html"/>
                    </group>
                    <footer>
                        <button string="Send" type="object" name="send_email" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>