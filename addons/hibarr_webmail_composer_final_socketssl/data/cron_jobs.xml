<odoo>
    <record id="ir_cron_mail_fetch" model="ir.cron">
        <field name="name">Fetch Emails from IMAP</field>
        <field name="model_id" ref="model_mail_account"/>
        <field name="state">code</field>
        <field name="code">model.fetch_mails()"/>
        <field name="interval_number">1</field>
        <field name="interval_type">minutes</field>
        <field name="active">True</field>
    </record>
</odoo>